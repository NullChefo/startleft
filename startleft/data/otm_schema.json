{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OTM File",
    "type": "object",
    "required": ["project", "trustzones", "components", "dataflows"],
    "properties": {
        "project": {
            "type": "object",
            "required": ["name", "id"],
            "properties": {
                "name": {"type": "string"},
                "id":   {"type": "string"}
            }
        },
        "trustzones": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "type"],
                "properties": {
                    "id":   {"$ref": "#/definitions/uuid"},
                    "name": {"type": "string"},
                    "type": {"type": "string"}
                }
            }
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "type"],
                "properties": {
                    "id":     {"$ref": "#/definitions/uuid"},
                    "name":   {"type": "string"},
                    "type":   {"type": "string"},
                    "parent": {"$ref": "#/definitions/uuid"},
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }        
        },
        "dataflows": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "name", "type", "from", "to"],
                "properties": {
                    "id":   {"$ref": "#/definitions/uuid"},
                    "name": {"type": "string"},
                    "type": {"type": "string"},
                    "from": {"$ref": "#/definitions/uuid"},
                    "to":   {"$ref": "#/definitions/uuid"}
                }
            }    
        }
    },
    "definitions":{
        "uuid": {
            "type": "string",
            "minlength": 1,
            "maxlength": 36,
            "pattern": "^(?![nN][uU][lL]{2}$)\\s*\\S.*"
        }
}
}